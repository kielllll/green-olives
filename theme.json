{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "color": {
      "defaultDuotone": false,
      "defaultGradients": false,
      "defaultPalette": false,
      "palette": [
        {
          "color": "#FFFFFF",
          "name": "Base",
          "slug": "base"
        },
        {
          "color": "#111111",
          "name": "Contrast",
          "slug": "contrast"
        },
        {
          "color": "#697B03",
          "name": "Accent 1",
          "slug": "accent-1"
        },
        {
          "color": "#7E4E24",
          "name": "Accent 2",
          "slug": "accent-2"
        },
        {
          "color": "#CCAF00",
          "name": "Accent 3",
          "slug": "accent-3"
        },
        {
          "color": "#A4B363",
          "name": "Accent 4",
          "slug": "accent-4"
        },
        {
          "color": "#E93C3C",
          "name": "Accent 5",
          "slug": "accent-5"
        },
        {
          "color": "color-mix(in srgb, currentColor 20%, transparent)",
          "name": "Accent 6",
          "slug": "accent-6"
        }
      ]
    },
    "layout": {
      "contentSize": "1115px",
      "wideSize": "1368px"
    },
    "spacing": {
      "defaultSpacingSizes": false,
      "spacingSizes": [
        {
          "name": "Tiny",
          "size": "10px",
          "slug": "20"
        },
        {
          "name": "X-Small",
          "size": "20px",
          "slug": "30"
        },
        {
          "name": "Small",
          "size": "30px",
          "slug": "40"
        },
        {
          "name": "Regular",
          "size": "clamp(30px, 5vw, 50px)",
          "slug": "50"
        },
        {
          "name": "Large",
          "size": "clamp(30px, 7vw, 70px)",
          "slug": "60"
        },
        {
          "name": "X-Large",
          "size": "clamp(50px, 7vw, 90px)",
          "slug": "70"
        },
        {
          "name": "XX-Large",
          "size": "clamp(70px, 10vw, 140px)",
          "slug": "80"
        }
      ],
      "units": ["%", "px", "em", "rem", "vh", "vw"]
    },
    "typography": {
      "writingMode": true,
      "defaultFontSizes": false,
      "fluid": true,
      "fontSizes": [
        {
          "fluid": false,
          "name": "Small",
          "size": "0.875rem",
          "slug": "small"
        },
        {
          "fluid": {
            "max": "1.125rem",
            "min": "1rem"
          },
          "name": "Medium",
          "size": "1rem",
          "slug": "medium"
        },
        {
          "fluid": {
            "max": "1.375rem",
            "min": "1.125rem"
          },
          "name": "Large",
          "size": "1.38rem",
          "slug": "large"
        },
        {
          "fluid": {
            "max": "2rem",
            "min": "1.75rem"
          },
          "name": "Extra Large",
          "size": "1.75rem",
          "slug": "x-large"
        },
        {
          "fluid": {
            "max": "3rem",
            "min": "2.15rem"
          },
          "name": "Extra Extra Large",
          "size": "2.15rem",
          "slug": "xx-large"
        }
      ],
      "fontFamilies": [
        {
          "name": "Montserrat",
          "slug": "montserrat",
          "fontFamily": "Montserrat, sans-serif",
          "fontFace": [
            {
              "src": [
                "file:./assets/fonts/montserrat/Montserrat-Regular.woff2"
              ],
              "fontWeight": "200 300 400 800",
              "fontStyle": "normal",
              "fontFamily": "Montserrat"
            }
          ]
        }
      ]
    },
    "useRootPaddingAwareAlignments": true
  },
  "styles": {
    "typography": {
      "fontFamily": "var:preset|font-family|montserrat",
      "fontSize": "var:preset|font-size|large",
      "fontWeight": "300",
      "letterSpacing": "-0.1px",
      "lineHeight": "1.4"
    }
  }
}
